# ===========================================
# PropPulse Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Database (Required)
# ===========================================
# PostgreSQL connection string
# For local development with Supabase: postgresql://postgres:postgres@127.0.0.1:5432/real_estate_pulse
# For production: Get from Supabase/Neon/Railway dashboard
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"

# ===========================================
# Application URLs (Required)
# ===========================================
# Base URL of your application
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# ===========================================
# Authentication - Better Auth (Required)
# ===========================================
# Same as your base URL
BETTER_AUTH_URL="http://localhost:3000"
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3000"

# ===========================================
# ImageKit - Image Storage (Required)
# ===========================================
# Get these from https://imagekit.io/dashboard
IMAGEKIT_PUBLIC_KEY="your_imagekit_public_key"
IMAGEKIT_PRIVATE_KEY="your_imagekit_private_key"
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your_imagekit_id"

# ===========================================
# AI Features - Smart Blog (Optional)
# ===========================================
# OpenAI API key for AI content generation
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-..."

# Perplexity API key for topic research (optional)
# Get from https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY="pplx-..."

# ===========================================
# OAuth Providers (Optional)
# ===========================================
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ===========================================
# Email - Nodemailer (Optional)
# ===========================================
# SMTP settings for sending emails
# EMAIL_HOST=""
# EMAIL_PORT=""
# EMAIL_USER=""
# EMAIL_PASS=""
# EMAIL_FROM=""